NEXT_PUBLIC_DOMAIN=localhost:3000

# postgres connection string
DATABASE_URL=postgresql://myuser:mypassword@localhost:5433/personal

# email from address, ex: "Example <hey@example.com>"
EMAIL_FROM="Example <hey@example.com>"

# console, smtp, resend, default is console
EMAIL_PROVIDER=console

# if email provider is resend, get your key from resend.com
RESEND_API_KEY=

# if email provider is smtp
SMTP_HOST=
# defaults to 587
SMTP_PORT=
SMTP_USERNAME=
SMTP_PASSWORD=
# true or 1, defaults to true
SMTP_SECURE=

# set this to 1 to build the app as a standalone app
# if you are building a docker image, this is already set for you
STANDALONE=0
